<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exitbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="683dp"
        android:layout_weight="1"
        android:text="Exit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wordimage"
        android:layout_width="407dp"
        android:layout_height="252dp"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="102dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/type1"
        tools:layout_editor_absoluteX="33dp" />

    <TextView
        android:id="@+id/pronounciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/word"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="518dp" />

    <TextView
        android:id="@+id/meaning1"
        android:layout_width="233dp"
        android:layout_height="23dp"
        android:layout_marginStart="100dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/type1"
        app:layout_constraintStart_toStartOf="@+id/type1"
        tools:layout_editor_absoluteY="514dp" />

    <TextView
        android:id="@+id/type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/type1"
        tools:layout_editor_absoluteX="33dp" />

    <TextView
        android:id="@+id/meaning2"
        android:layout_width="337dp"
        android:layout_height="27dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="629dp" />

    <TextView
        android:id="@+id/example"
        android:layout_width="233dp"
        android:layout_height="23dp"
        android:layout_marginStart="100dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/type2"
        app:layout_constraintStart_toStartOf="@+id/type2"
        tools:layout_editor_absoluteY="548dp" />

    <TextView
        android:id="@+id/example_korean"
        android:layout_width="337dp"
        android:layout_height="27dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/meaning2"
        tools:layout_editor_absoluteY="670dp" />

</androidx.constraintlayout.widget.ConstraintLayout>